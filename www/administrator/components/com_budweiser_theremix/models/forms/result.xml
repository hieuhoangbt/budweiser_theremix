<?xml version="1.0" encoding="utf-8"?>
<form>
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="ordering"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" default="0000-00-00 00:00:00" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_CREATED_BY" description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_CREATED_BY" hidden="true" hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_MODIFIED_BY" description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_MODIFIED_BY" hidden="true" hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_MODIFIED_BY"/>
    <field name="user_id" type="sql" required="true" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_USER_ID" 
           description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_USER_ID" 
           hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_USER_ID"
            query="SELECT id, fullname FROM #__budweiser_theremix_user where state=1"
            key_field="id"
            value_field="fullname"/>
    <field name="image" type="media" required="true" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_IMAGE" description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_IMAGE" hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_IMAGE"/>
    <field name="celebrity_id" type="sql" required="true" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_CELEBRITY_ID" 
           description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_CELEBRITY_ID" 
           hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_CELEBRITY_ID"
        query="SELECT id, name FROM #__budweiser_theremix_celebrity where state=1"
            key_field="name"
            value_field="name"
    />
    <field name="frame_id" type="sql" required="true" label="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_FRAME_ID" 
           description="COM_BUDWEISER_THEREMIX_FORM_DESC_RESULT_FRAME_ID" 
           hint="COM_BUDWEISER_THEREMIX_FORM_LBL_RESULT_FRAME_ID"
    query="SELECT id, name FROM #__budweiser_theremix_frame where state=1"
            key_field="name"
            value_field="name"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
